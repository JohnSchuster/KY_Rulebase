body { 
	font-family: Calibri, Tahoma, Arial, sans-serif;
    font-size: 18px;
}

 i ,p {
    font-size: 16px; 
	margin-left: 6em;	
}

 h1, h2, h3, .heading1, .heading2, .heading3 {
   	font-family: Calibri, Tahoma, Arial, sans-serif;
    color: #003D6E;
	padding-top: 7px;
 	padding-left: 2em;
}
 
.radio-group input, .radio-group-boolean input {
  width: 1.5em;
  height: 1.5em;
}   
                                                                            
.input-checkbox  input {
     width: 1.5em;
	 height: 1.5em;
}	
 
 .control-checkbox .input-checkbox  input {
     width: 1.5em;
	 height: 1.5em
}
	
.entity-instance-group .control input[type="checkbox"] {
	width: 1.5em;
	height: 1.5em;
} 

img.center { 
