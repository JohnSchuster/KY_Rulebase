/* Main section - general style for all pages */

body {
    color: ${body-text-color};
## we always fall back to sans-serif
    font-family: #foreach($font in ${display-fonts})${font},#end sans-serif;
    font-size: small;
}

/* Main block elements, structural layout */
#header {
    width: 100%;
	height: 110px;
    clear:both;
    float:left;
	background-color: ${header-background-color}; 
	margin-left: auto;
	margin-right: auto;
}
#header .left,
#header .content,
#header .right
{
    float: left;
    overflow: hidden;
}
#header .left {
    padding-left: 0px;
    padding-right: 0px;
}
#header .content {
    width: 0;
}
#header .right {
    text-align: left;
}
#header .right p {
    padding-top: 0px;
    margin-top: 0;
    font-size: 24px; /* Using pixels here as it's the explicit same size as the logo */
    vertical-align: top;
}
#header .left p img {
    padding-top: 4px;
}
/* for Internet Explorer only,box model pixel fix */
/*\*/
#header .left p img {
    _padding-top: 6px;
}
/**/

/** menu */
#menu {
    clear:both;
    float:left;
    width: 100%;
    height: 1.2em;
}
#menu .left,
#menu .content,
#menu .right
{
    float: left;
    padding-top: .1em;
}
#menu .left {
    width: auto;
    white-space:nowrap;
}
#menu .content {
    width: 0;
}
#menu .right {
    text-align: right;
    min-width: ${menu-right-min-width};
    float: right;
    white-space:nowrap;
    padding-right: 20px;
}
#menu .navigation {
    padding-left: 20px;
}

#status {
    clear:both;
    float:left;
    width: 100%;
    height: 1.2em;
}

#status .left,
#status .content,
#status .right
{
    float: left;
    overflow: hidden;
    padding-top: .2em;
}
#status .left {
    width: auto;
}
#status .content {
    width: 0;
}
#status .right {
    text-align: right;
    width: auto;
    min-width: ${menu-right-min-width};
    float: right;
    white-space:nowrap;
    padding-right: 20px;
}

#status-info {
    float: right;
    padding-left: 5px;
}

#footer {
    clear:both;
    float:left;
    width:100%;
}
#footer .left,
#footer .content,
#footer .right
{
    float: left;
}
#footer .left {
    padding-left: 20px;
    padding-top: 3px;
    width: 55%;
    min-width: 30%;
}
#footer .content {
    width: 1%;
}
#footer .right {
    text-align: right;
    padding-right: 20px;
    padding-top: 3px;
    width: 5%;
    min-width: 230px;
    float: right;
}

/* floating footer setup */
html, body {
    height: 100%;
    min-width: ${screen-min-width};
}
#wrapper {
     min-height: 100%;
     height: auto !important;
     height: 100%;
     margin: 0 auto -2.0em;
     width: auto !important;
     clear: both;
     min-width: ${screen-min-width};
}
#footer {
    min-width: ${screen-min-width};
    padding-bottom: 7px;
}
/* Generic block styling for main interview screens */
#content {
    float: left;
    clear: both;
    width: 100%;
}

#commentary-iframe {
    clear: both;
}

#commentary-iframe iframe {
  width:100%;
  scrolling: auto
}

#summary, #content-wrapper {
    padding-left: 30px;
}
#investigation form {
    padding-left: 10px;
}
.control-item {
    clear: both;
    padding-top: 0.2em;
}
.control-clear {
    height: 1px;
    width: 100%;
    clear: both;
}
.control-item .question {
    float: left;
    width: ${question-width} !important;
}
.control-item .info {
    float: left;
    text-align: right;
    width: ${info-width};
}
.control-item .control {
    float: right;
    text-align: left;
    width: ${answer-width};
}
.control-item .button-spacer {
    float: left;
    width: ${question-width};
}
.control-item .submit-button {
    float: right;
    text-align: left;
    width: ${answer-width};
}
.button-group .buttons {
    float: right;
    width: ${answer-width};
}

.data-review-item {
    clear: both;
}
.data-review-item .data-review-input-text {
    float: left;
    text-align: left;
    padding-bottom:0.2em;
}
.data-review-item .data-review-input-value {
    float: left;
    text-align: left;
    padding-left: 10px;
    padding-bottom:0.2em;
}
.data-review-entity-group, .data-review-screen-item, .data-review-folder-item {
    clear: both;
}
.nodeicon {
    float: left;
    padding-top: 2px;
}
.data-review-screen-item, .data-review-folder-item {
    padding-top: 0.3em;
}
.data-review-folder-item .folder-name {
    clear: none;
    float: left;
    padding-bottom:0.2em;
}
.data-review-screen-item ul{
    margin-top:0.2em;
}
li .data-review-input-text {
    padding-left: 0px;
}
.expanded ul {
  padding-left: 10px;
}

.control-list {
    padding-left: 15px;
}

.control-list ul li{
    list-style: square outside none;
    padding-left: 0px;
    padding-top: 0.5em;
}


/** Layout for tabular entity entry */
.control-item .tabular table td,
.control-item .tabular table th {
    text-align: left;
    vertical-align: middle;
    height: 1em;
    padding-right: 10px;
}
.control-item .tabular table td {
    padding-top: 0.5em;
}
.control-item .tabular table th {
    padding-right: 50px;
}

/** Don't display the input control labels in tables */
.control-item .tabular table td .question,
.control-item .tabular table th .question {
    display: none;
}
.control-item .tabular table td .control {
    width:auto;
    float:left;
}
.control-item .tabular table th {
    padding-bottom: 0.5em;
}
.control-item .tabular table td .button-group .buttons {
    width: auto;
    padding-left: 0;
}

/** Layout for landscape entity entry */
.control-item .landscape table td .question label {
    display: none;
}
.control-item .landscape table td {
    padding-right: 5px;
    padding-top: 5px;
    vertical-align: top;
}
.control-item .landscape table td .info {
    padding-right: 5px;
}
.control-item .landscape table td .question {
    display: none;
}
.control-item .landscape table td .control {
    padding: 0;
    width: 50%;
    float: left;
}
.control-item .landscape table td .button-group .buttons {
    width: 90%;
    padding-left: 0;
}
.control-item .landscape table td .messages {
    width: 100%;
}
.control-item .landscape table tr {
    margin-top: 5px;
}
.control-item .landscape table td .question-column {
    padding-left: 0;
    padding-right: 20px;
}

td .buttons {
    white-space: nowrap;
}



/** Rulebase amd locale selection screens */
.selection-list {
    padding-left: 145px; /*width of logo + padding */
}

.saved-case-list {
    padding-left: 12px;
}

.selection-list ul {
    padding-left: 30px;
}
.selection-list ul li {
    padding-top: 7px;
}
.column {
	min-width:250px;
    width: 25%;
    float: left;
}


/** progress bar styling and layout */
#progress-bar {
    float: right;
    line-height: 10px;
    border: solid 1px ${progress-bar-border-color};
}
#progress-bar .complete {
    float: left;
    background-color: ${progress-bar-complete-color};
}
#progress-bar .incomplete {
    float: left;
    background-color: ${progress-bar-incomplete-color};
}
#progress-stages {
    display: block;
    float: left;
    clear: both;
    width: 100%;
    font-size: 90%;
    line-height: 2.25em;
    background-color: ${progress-stages-background-color};
    color: #6D6D6D;

    margin-left: 0;
    margin-right: 5px;
    padding: 0;

    border-top-style: solid;
    border-bottom-style: solid;
    border-width: 1px;
    border-color: ${progress-stages-border-color};
}
#progress-stages ul {
    list-style: none;
    margin: 0;
    padding: 0;
}
#progress-stages li {
    display: inline;
    float: left;
    font-weight: normal;
    padding-left: 10px;
    padding-right: 10px;
    padding-top: 0;
    white-space: nowrap;
}
#progress-stages li.inactive {
}
#progress-stages li.active {
    color: ${progress-stages-text-color};
    font-weight: bold;
}

/* Generic block styling and colours */
body {
    background-color: ${body-background-color};	
}
#wrapper {
    background-color: ${body-background-color};
}
#header {
    padding: 5px 0 5px 0;
}
#menu {
    border-width: 0 0 1px 0;
    border-style: solid;
    border-color: ${menu-border-color};
    padding: 3px 0 2px 0;
    margin: 0 0 0 0;
    clear:both;
    float:left;
    color: ${menu-text-color};
    text-size: medium;
    font-weight: bold;
    width: 100%;
    background-color: ${menu-background-color};
    background-image:url('${context-root-path}${image-resource-request}/${menu-background-image}');
}
#status {
    font-size: x-small;
    font-style: italic;
    color: ${status-bar-text-color};
    background-color: ${status-bar-background-color};
    border-bottom: 1px solid ${status-bar-border-color};
    padding: 2px 0 2px 0;
}
#content {
    background-color: ${body-background-color};
}
#summary #title {
   margin-left: -10px;
}
#investigation {
    background-color: ${body-background-color};
    padding: 0 0 0 20px;
}
#footer {
    background-color: ${footer-background-colour};
    color: ${footer-text-color};
    background-image: url('${context-root-path}${image-resource-request}/${footer-background-image}');
    overflow: hidden;
    #if( ${footer-border-colour} )
      border-top:1px solid;
      border-color:${footer-border-colour};
      height:auto;
    #end
}

/* Menu font and colour styling */
#menu .left a:link, #menu .left a:active, #menu .left a:visited {
    color: ${menu-link-text-color};
    text-decoration: underline;
}
#menu .left a:hover {
    color: ${menu-link-text-hover-color};
    text-decoration: underline;
}

/* Styles relating to investigation screens */
#content p {
  clear: both;
}
/* Main interview form styling */
input {
    color: ${input-text-color};
    border: 1px solid ${input-border-color};
    background-color: ${input-background-color};
}
input .disabled, button .disabled, button[disabled] {
    opacity: .60;
    color: ${input-disabled-text-color};
    background-color: ${input-disabled-background-color};
    border: 1px solid ${input-disabled-border-color};
    cursor: not-allowed;
}
input[readonly], input .readonly {
    opacity: .60;
    color: ${input-readonly-text-color};
    background-color: ${input-readonly-background-color};
    border: 1px solid ${input-readonly-border-color};
    cursor: not-allowed;
}
.buttons .add, .buttons .remove, .buttons .button, #submit
{
    text-align: center;
    border-top: 1px solid ${button-border-color};
    border-left: 1px solid ${button-border-color};
    border-bottom: 2px solid ${button-border-color};
    border-right: 2px solid ${button-border-color};
    cursor: pointer;
    background-image:url('${context-root-path}${image-resource-request}/${button-background-image}');
    background-color:${button-background-color};
}
#submit {
    padding: 0 20px 0 20px;
}
.input-checkbox {
    border: none;
    padding-top: 2px;
}
.buttons {
  width: 30%;
}
.radio-group input, .radio-group-boolean input {
  border: none;
  background: transparent;
}
.entity-instance-group {
   width: 100%;
   padding-bottom: 2em;
}
.entity-instance-group .question, .entity-instance-group .control, .entity-instance-group .info {
    padding-top: 0.5em;
}
.entity-instance-group .question, .entity-instance-group {
    text-align: left;
    float: left;
}
.entity-instance-group .question {
    width: ${question-width};
}
.entity-instance-group .control {
    width: ${answer-width};
}
.entity-instance-group .control input[type="checkbox"] {
    float: left;
    text-align: left;
}
.control-item .button-group {
    clear: both;
}
.control-item .button-group input {
    margin-top: 10px;
}

.control-item .control .radio-group-boolean fieldset label{
    float: left;
    text-align: left;
}

/* hide labels used only for accessibility */
legend {
    visibility: hidden;
    display:none;
}
label.hidden{
    visibility: hidden;
    display:none;
}

.system-error {
    padding-left: 15%;
    width: 60%;
}

/** Messages displayed to the user */
#messages {
  clear: both;
  width: 80%;
  background-color: ${messages-background-color};
  border: 1px dotted ${messages-border-color};
  margin: 15px 15px 15px 15px;
  color: ${messages-text-color};
}
#messages p {
  margin: 5px 5px 5px 15px;
}

/* To Many relationship collect control */
.relationship-control .question {
    float: left;
    width: ${question-width};
    text-align: left;
    margin-top: none;
}
.relationship-control .spacer {
    float: left;
    width: 2%;
}
.relationship-targets {
    text-align: left;
    float: right;
    width: ${answer-width};
}
.relationship .control-checkbox input {
    padding-top: 3px;
    margin-top: none;
    vertical-align: middle;
}

ol li {
    padding: 2px 0 0 10px;
    list-style-image: none;
    list-style-position: inside;
    list-style-type: decimal;
}

/* Decision report and summary screen */
ul li {
    padding: 2px 0 0 10px;
    list-style-image: none;
    list-style-position: inside;
    list-style-type: square;
}

.GoalControlBlock ol li {
    list-style-image: none;
    list-style-position: inside;
    list-style-type: decimal;
}

.GoalControlBlock {
    margin-top: 15px;
}
.GoalControlBlock ul li {
    padding: 0.2em 0 0.2em 0;
}

.GoalControlBlock ul li div {
    display: inline;
}

.help {
    padding-top: 3em;
    padding-left: 40px;
}



/* Pure text styling */
.control-item hr {
    color: #e0dfe3;
    background-color: ${input-separator-color};
    border-top: 1px solid ${input-separator-color};
    height: 1px;
}

td, th {
    background: transparent;
    text-align: left;
    font-weight: normal;
}

#title h1 {
    font-size: xx-large;
}
h1, h2, h3, h4, h5, h6, .Heading1, .Heading2, .Heading3 {
    color: ${header-text-color};
    font-weight: ${headers-font-weight};
    padding-top: 0.5em;
    padding-bottom: 0.2em;
}
h1, .Heading1 {
    font-size: ${header1-font-size};
}
h2, .Heading2 {
    font-size: ${header2-font-size};
}
h3, .Heading3 {
    font-weight: bold;
    font-style: italic;
}

#confirm-end-session-text {
    text-align: center;
    margin-left: -10%;
}

ul li {
    padding: 2px 0 0 10px;
    list-style-image: none;
    list-style-position: inside;
    list-style-type: square;
}

ul.datareview li {
    list-style-type: none;
    padding-top: 0.2em;
}
ul.datareview li img {
    padding-right: 5px;
}

ul.datareview li.expanded ul {
    display: block;
}

ul.datareview li ul {
    margin-left: 0;
}

ul.datareview li.collapsed ul {
    display: none;
}

.data-review-input-text {
    font-weight: bold;
}

ul.decisionreport li {
    list-style-type: none;
    padding-top: 5px;
}
ul.decisionreport li img {
    margin-right: 5px;
}

ul.decisionreport li.expanded ul {
    display: block;
}

ul.decisionreport li.collapsed ul {
    display: none;
}


a:link, a:active, a:visited {
    color: ${link-text-color};
    text-decoration: underline;
}
a:hover {
    color: ${link-hover-text-color};
    text-decoration: underline;
}

.error {
    color: ${messages-error-text-color};
    margin-top: 5px;
    margin-bottom: 5px;
    font-style:italic;
}
.warning {
    color: ${messages-warning-text-color};
    margin-top: 5px;
    margin-bottom: 5px;
    font-style:italic;
}
.attribute-id {
    color: ${attribute-id-text-color};
    font-size: x-small;
    float: left;
    padding-right: 10px;
}
.mandatory {
    color: ${mandatory-marker-text-color};
}

.clear {
    clear: both;
    padding-bottom: 30px;
}

.listbox  {
    width:${listbox-width};
}

/* for Internet Explorer 6 only, with chinese and links underline will be hidden randomly */
.GoalControlBlock, .question {
  padding-bottom: 1px;
}


/* Additional styles for JQuery searching combbox */
.ui-button { margin-left: -1px; }
.ui-button-icon-only .ui-button-text {
    padding: 0.35em;
    line-height: 1.4;
    display: inline;
}
li.ui-menu-item { list-style-type: none}
.ui-widget-content {
    border: 1px solid ${input-border-color};
    color:${input-text-color};
}

.ui-state-disabled {
    opacity: .60;
    background-image: none;
    color: ${input-disabled-text-color};
    background-color: ${input-disabled-background-color};
    border: 1px solid ${input-disabled-border-color};
    cursor: not-allowed;
}

.ui-widget {
    font-family: #foreach($font in ${display-fonts})${font},#end sans-serif;
    font-size: small;
}

.ui-autocomplete-input{
   width: 130px
}

.searching-combo-number{
    width: 25px
}

