/* Begin - Styling for xRulz custom screen */

.xrulz_button  {  
    margin-right: 20em;
	float: right;
    }	
.xrulz_button .button {
    text-align: center;
    border-top: 1px solid #656565;
    border-left: 1px solid #656565;
    border-bottom: 2px solid #656565;
    border-right: 2px solid #656565;
	background-color:#cfcfcf;
    background-image:url('../images/rtnav_header_bg.gif');
    cursor: pointer;   
}		
.xr_cs_01_radio {
	float: left;
	margin-top: 1em;
	margin-left:3em;
}
input[type="radio"]:checked + .xr_01_sel {
    color:#E18700;
}	
.xr_01_sel { /* Also used by xr_cs_01 jQuery logic selector */
	text-align:left;
	font-size: 14px;
}
.xr_cs_01_listval {
	border: 1px solid blue;
	float: left;
	color: #4683AF;
	font-weight:bold;
	text-align:left;
}
/* End - Styling for xRulz custom screen */

.radio-group radio, .radio-group-boolean radio {
  width: 2.3em;
  height: 2.3em;
  
}
 .input-checkbox  checkbox {
     width: 2.5em;
	 height: 2.5em;
}	
 .control-checkbox .input-checkbox  checkbox {
     width: 2.5em;
	 height: 2.5em;
}
.entity-instance-group .control input [type="checkbox"] {
	width:2.5em;
	height: 2.5em;
} 

/* float the text right on labels */
.rt {
    float: right;
}

